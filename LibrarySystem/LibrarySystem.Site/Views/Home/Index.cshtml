
@model LibrarySystem.Site.ViewModel.BookModel

@{
    ViewBag.Title = "";

}

<div class="row">
    <h1 class="text-center">Kayıt</h1>
    <hr />
    <div class="container">

        @using (Html.BeginForm("Register", "Home", FormMethod.Post, new Dictionary<string, object> { { "data-submit", "true" }, { "data-redirect", "/x" }, { "autocomplete", "off" }, { "class", "form-horizontal m-t-20" } }))



        {
            @Html.ValidationSummary(true)
            @Html.AntiForgeryToken()

            <div class="col-md-12">
                <div class="row">

                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.BeginDate)
                            @Html.EditorFor(model => model.BeginDate, new { htmlAttributes = new { @class = "form-control input-sm", } })
                            @Html.ValidationMessageFor(model => model.BeginDate)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.EndDate)
                            @Html.EditorFor(model => model.EndDate, new { htmlAttributes = new { @class = "form-control input-sm", } })
                            @Html.ValidationMessageFor(model => model.EndDate)
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Country)
                            @Html.DropDownListFor(model => Model.Country, Model.CountryList, new Dictionary<string, object> { { "class", "form-control input-sm rsmList" } })
                            @Html.ValidationMessageFor(model => model.Country)
                        </div> <div class="form-group">

                            <button class="btn btn-info " id="Calculate" data-style="slide-down" type="submit">Hesapla</button>

                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card" style="width: 18rem;">
                            <div class="card-body" id="returnDiv"> 
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        }
    </div>
</div>

@Scripts.Render("~/bundles/Book")
